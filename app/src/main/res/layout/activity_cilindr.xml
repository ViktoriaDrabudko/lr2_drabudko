<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cilindr">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="goBack"
        android:text="← Back"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/tab_name_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:text="Цилиндр"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/So"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:text="So = "
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/So_in"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Введите S осн."

        android:inputType="number|numberDecimal"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/So"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/h_in"
        android:layout_width="286dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Введите высоту"
        android:inputType="number|numberDecimal"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/h"
        app:layout_constraintTop_toBottomOf="@+id/So_in" />

    <TextView
        android:id="@+id/h"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="h ="
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/So" />

    <Button
        android:id="@+id/count_kub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FA9C7F"
        android:onClick="count_cilindr"
        android:text="Расчет"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_in" />

    <TextView
        android:id="@+id/v_cil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:text="V = So * h ="
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_kub" />

    <TextView
        android:id="@+id/count_cil"
        android:layout_width="202dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/v_cil"
        app:layout_constraintTop_toBottomOf="@+id/count_kub" /><![CDATA[



    />


]]>
</androidx.constraintlayout.widget.ConstraintLayout>